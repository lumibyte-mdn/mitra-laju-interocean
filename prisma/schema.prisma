generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PortLocations {
  id            String          @id @default(uuid())
  portName      String          
  country       String
  isActive      Boolean         @default(true)
  createdAt     DateTime
  updatedAt     DateTime?
  createdBy     String
  updatedBy     String?
}

model Vessels {
  id              String          @id @default(uuid())
  vesselName      String
  voyage          String
  etd             DateTime
  cutOffDate      DateTime?
  isActive        Boolean
  createdAt       DateTime
  updatedAt       DateTime?
  createdBy       String
  updatedBy       String?
}

model Customers {
  id                      String          @id @default(uuid())
  customerCode            String
  customerName            String
  customerType            String
}